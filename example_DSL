MCU {
  name: "STM32F413ZH"
  ports {
    A: {0..5, 8, 10..15}
    B: {0..15}
    C: {13}
  }

  // Optional: wofür Pins genutzt werden dürfen (Mux/AF-Check)
  af {
    UART1.tx: [PA9,  PB6]
    UART1.rx: [PA10, PB7]
    SPI1.sck: [PA5,  PB3]
  }
}
